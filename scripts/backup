#!/bin/bash

source /usr/share/yunohost/helpers

ynh_print_info "Declaring files to be backed up..."

#=================================================
# BACKUP THE APP MAIN DIR
#=================================================

ynh_backup "$install_dir"

#=================================================
# BACKUP THE DATA DIR (SELECTIVE)
#=================================================

# Récupérer les paramètres de configuration
backup_complete="${backup_complete_downloads:-false}"
backup_incomplete="${backup_incomplete_downloads:-false}"
backup_admin="${backup_admin_data:-false}"

# Sauvegarder sélectivement les sous-dossiers du data_dir
if [ "$backup_complete" = "true" ]; then
    ynh_print_info "Backing up complete downloads folder..."
    ynh_backup "$data_dir/complete"
fi

if [ "$backup_incomplete" = "true" ]; then
    ynh_print_info "Backing up incomplete downloads folder..."
    ynh_backup "$data_dir/incomplete"
fi

if [ "$backup_admin" = "true" ]; then
    ynh_print_info "Backing up admin data folder..."
    ynh_backup "$data_dir/admin"
fi

#=================================================
# BACKUP THE NGINX CONFIGURATION
#=================================================

ynh_backup "/etc/nginx/conf.d/$domain.d/$app.conf"

#=================================================
# BACKUP LOGROTATE
#=================================================

ynh_backup "/etc/logrotate.d/$app"

#=================================================
# BACKUP SYSTEMD
#=================================================

ynh_backup "/etc/systemd/system/$app.service"

#=================================================
# END OF SCRIPT
#=================================================

ynh_print_info "Backup script completed for $app. (YunoHost will then actually copy those files to the archive)."
