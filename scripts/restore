#!/bin/bash

source /usr/share/yunohost/helpers

#=================================================
# RESTORE THE APP MAIN DIR
#=================================================
ynh_script_progression "Restoring the app main directory..."

ynh_restore "$install_dir"

#=================================================
# RESTORE THE DATA DIRECTORY (SELECTIVE)
#=================================================
ynh_script_progression "Restoring the data directory..."

# Récupérer les paramètres de configuration
backup_complete="${backup_complete_downloads:-false}"
backup_incomplete="${backup_incomplete_downloads:-false}"
backup_admin="${backup_admin_data:-false}"

# Restaurer sélectivement les sous-dossiers du data_dir
if [ "$backup_complete" = "true" ]; then
    if [ -d "$YNH_BACKUP_DIR/data_dir/complete" ]; then
        ynh_print_info "Restoring complete downloads folder..."
        ynh_restore "$data_dir/complete"
    fi
fi

if [ "$backup_incomplete" = "true" ]; then
    if [ -d "$YNH_BACKUP_DIR/data_dir/incomplete" ]; then
        ynh_print_info "Restoring incomplete downloads folder..."
        ynh_restore "$data_dir/incomplete"
    fi
fi

if [ "$backup_admin" = "true" ]; then
    if [ -d "$YNH_BACKUP_DIR/data_dir/admin" ]; then
        ynh_print_info "Restoring admin data folder..."
        ynh_restore "$data_dir/admin"
    fi
fi

#=================================================
# RESTORE SYSTEM CONFIGURATIONS
#=================================================
ynh_script_progression "Restoring system configurations related to $app..."

ynh_restore "/etc/nginx/conf.d/$domain.d/$app.conf"

ynh_restore "/etc/systemd/system/$app.service"
systemctl enable $app.service --quiet

yunohost service add $app --description="SABnzbd Usenet Client" --log="/var/log/$app/$app.log"

ynh_restore "/etc/logrotate.d/$app"

#=================================================
# RELOAD NGINX AND START THE APP SERVICE
#=================================================
ynh_script_progression "Reloading NGINX web server and starting $app's service..."

mkdir -p /var/log/$app/
touch /var/log/$app/$app.log
chown -R $app:$app /var/log/$app/

ynh_systemctl --service=$app --action="start"

ynh_systemctl --service=nginx --action=reload

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Restoration completed for $app"
