#!/bin/bash

source _common.sh
source /usr/share/yunohost/helpers

#=================================================
# STOP SYSTEMD SERVICE
#=================================================
ynh_script_progression "Stopping $app's systemd service..."

ynh_systemctl --service=$app --action="stop"

#=================================================
# "REBUILD" THE APP (DEPLOY NEW SOURCES, RERUN NPM BUILD...)
#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================

ynh_script_progression "Upgrading source files..."

# Download, check integrity, uncompress and patch the source from manifest.toml
ynh_setup_source --dest_dir="$install_dir"

#=================================================
# REAPPLY SYSTEM CONFIGURATIONS
#=================================================
ynh_script_progression "Upgrading system configurations related to $app..."

# This should be a literal copypaste of what happened in the install's "System configuration" section

ynh_config_add_nginx

ynh_config_add_systemd

yunohost service add $app --description="SABnzbd Usenet Client" --log="/var/log/$app/$app.log"

ynh_config_add_logrotate

#=================================================
# PYTHON VIRTUALENV SETUP FOR UPGRADES
#=================================================

ynh_script_progression "Recreating Python virtualenv..."

pushd "$install_dir"
    # Create virtualenv as the app user
    ynh_exec_as_app python3 -m venv venv

    # Upgrade pip and install wheel as the app user
    ynh_exec_as_app ./venv/bin/pip install --upgrade pip wheel setuptools

    # Install all Python dependencies as the app user
    ynh_exec_as_app ./venv/bin/pip install -r requirements.txt

    # Enable multi-language support if needed
    if [ -f "tools/make_mo.py" ]; then
        ynh_exec_as_app ./venv/bin/python3 tools/make_mo.py
    fi
popd

#=================================================
# ENSURE LOG DIRECTORY EXISTS
#=================================================
# Ensure log directory and file exist with correct permissions
mkdir -p "/var/log/$app"

# Create log file if it doesn't exist
if [ ! -f "/var/log/$app/$app.log" ]; then
    touch "/var/log/$app/$app.log"
fi

#=================================================
# START SYSTEMD SERVICE
#=================================================
ynh_script_progression "Starting $app's systemd service..."

ynh_systemctl --service=$app --action="start"

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Upgrade of $app completed"
